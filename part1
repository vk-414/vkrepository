<body>

  <div class="container">
    <h2>Обчислення відсотків</h2>
    <input type="number" id="number" placeholder="Число">
    <input type="number" id="percent" placeholder="Відсоток">
    <br>
    <button onclick="calculatePercent()">Розрахувати</button>
    <div id="output"></div>
  </div>

  <script>
    function calculatePercent() {
      const number = parseFloat(document.getElementById("number").value);
      const percent = parseFloat(document.getElementById("percent").value);

      if (isNaN(number) || isNaN(percent)) {
        document.getElementById("output").innerText = "Введіть обидва значення!";
        return;
      }

      const result = (number * percent) / 100;
      document.getElementById("output").innerText = percent + "% від " + number + " = " + result;
    }
  </script>

